<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <com.macode.flappybird.activities.GameViewActivity
        android:id="@+id/relativeLayoutGameView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <TextView
        android:id="@+id/textScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="50sp"
        android:textStyle="bold"
        android:text="0"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"/>

    <RelativeLayout
        android:id="@+id/relativeLayoutGameOver"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:visibility="invisible">

        <ImageView
            android:id="@+id/gameOverImage"
            android:layout_width="300dp"
            android:layout_height="250dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="54dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="50dp"
            android:src="@drawable/gameover" />

        <TextView
            android:id="@+id/gameOverScoreText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="325dp"
            android:layout_marginEnd="165dp"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="100sp" />

        <TextView
            android:id="@+id/gameOverBestScoreText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="460dp"
            android:layout_marginEnd="138dp"
            android:text="Best: 0"
            android:textColor="@color/white"
            android:textSize="35sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/retryButton"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="118dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/roundcorner"
            android:padding="15dp"
            android:text="Retry"
            android:textColor="@color/black"
            android:textSize="35dp"
            android:textStyle="bold" />
    </RelativeLayout>
</RelativeLayout>